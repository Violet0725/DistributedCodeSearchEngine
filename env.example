# CodeSearch Configuration
# Copy this file to .env and modify as needed

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=code_embeddings

# RabbitMQ Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=indexing_jobs

# Embedding Model
# Options:
#   - microsoft/codebert-base (best for code understanding)
#   - sentence-transformers/all-MiniLM-L6-v2 (faster, smaller)
#   - Salesforce/codet5-base (good balance)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Storage Paths
REPOS_PATH=./data/repos
INDEX_PATH=./data/index

# Processing
BATCH_SIZE=32
MAX_WORKERS=4

# GitHub API (optional - increases rate limits)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

